<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3">

        <Button
            android:id="@+id/b1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/StringNull"
            android:textSize="24sp"
            android:backgroundTint="#BCB7B7"
            android:contentDescription="Button 1"
            android:padding="8dp"
            android:onClick="Check"/>

        <Button
            android:id="@+id/b2"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_marginLeft="21dp"
            android:textSize="24sp"
            android:backgroundTint="#BCB7B7"
            android:contentDescription="Button 2"
            android:text="@string/StringNull"
            android:padding="8dp"
            android:onClick="Check"/>

        <Button
            android:id="@+id/b3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/StringNull"
            android:layout_marginLeft="21dp"
            android:textSize="24sp"
            android:backgroundTint="#BCB7B7"
            android:contentDescription="Button 3"
            android:padding="8dp"
            android:onClick="Check"/>

        <Button
            android:id="@+id/b4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/StringNull"
            android:textSize="24sp"
            android:backgroundTint="#BCB7B7"
            android:layout_marginTop="10dp"
            android:contentDescription="Button 4"
            android:padding="8dp"
            android:onClick="Check"/>

        <Button
            android:id="@+id/b5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/StringNull"
            android:layout_marginLeft="21dp"
            android:textSize="24sp"
            android:backgroundTint="#BCB7B7"
            android:layout_marginTop="10dp"
            android:contentDescription="Button 5"
            android:padding="8dp"
            android:onClick="Check"/>

        <Button
            android:id="@+id/b6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/StringNull"
            android:layout_marginLeft="21dp"
            android:textSize="24sp"
            android:backgroundTint="#BCB7B7"
            android:layout_marginTop="10dp"
            android:contentDescription="Button 6"
            android:padding="8dp"
            android:onClick="Check"/>

        <Button
            android:id="@+id/b7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/StringNull"
            android:textSize="24sp"
            android:backgroundTint="#BCB7B7"
            android:layout_marginTop="10dp"
            android:contentDescription="Button 7"
            android:padding="8dp"
            android:onClick="Check"/>

        <Button
            android:id="@+id/b8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/StringNull"
            android:layout_marginLeft="21dp"
            android:textSize="24sp"
            android:backgroundTint="#BCB7B7"
            android:layout_marginTop="10dp"
            android:contentDescription="Button 8"
            android:padding="8dp"
            android:onClick="Check"/>

        <Button
            android:id="@+id/b9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="@string/StringNull"
            android:layout_marginLeft="21dp"
            android:textSize="24sp"
            android:backgroundTint="#BCB7B7"
            android:layout_marginTop="10dp"
            android:contentDescription="Button 9"
            android:padding="8dp"
            android:onClick="Check"/>

    </GridLayout>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_marginTop="24dp"
        android:backgroundTint="#ED0606"
        />
</LinearLayout>
